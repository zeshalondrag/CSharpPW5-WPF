<Window x:Class="Audio_Player___MVVM.Views.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Audio_Player___MVVM.Views"
        mc:Ignorable="d"
        Icon="Helpers/Image/icons-spotify.ico"
        WindowStartupLocation="CenterScreen"
        Title="Spotify" Height="400" Width="350" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox Text="Spotify" IsReadOnly="True" TextAlignment="Center" FontSize="24" Margin="20" FontWeight="Bold"/>
            <Button Content="Запустить" Command="{Binding OpenPlayerCommand}" Width="200" Margin="10" Foreground="White"/>
            <Button Content="Настройки" Command="{Binding OpenSettingsCommand}" Width="200" Margin="10" Foreground="White"/>
            <Button Content="Выход" Command="{Binding ExitCommand}" Width="200" Margin="10" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>